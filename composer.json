{
	"name": "phpbits/block-options",
	"type": "wordpress-plugin",
	"require": {
		"php": ">=5.6"
	},
	"config": {
		"platform": {
			"php": "5.6"
		}
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.5",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-coding-standards/wpcs": "^2.1",
		"phpunit/phpunit": "^5"
	},
	"scripts": {
		"post-install-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
		"post-update-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
		"test": [
			"phpcs --report=full --colors -p --standard=phpcs.xml --ignore=*/vendor/*,*/node_modules/*,*/build/* * --extensions=php"
		],
		"format": "phpcbf --standard=phpcs.xml --report-summary --report-source --ignore=*/vendor/*,*/node_modules/*,*/build/* * --extensions=php"
	}
}
