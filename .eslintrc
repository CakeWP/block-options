{
  "parser": "babel-eslint",
  "globals": {
    "_": "readonly",
    "wp": "readonly",
    "ReactDOM": "readonly"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "space-before-function-paren": ["error", "always"],
    "semi": ["error", "always"],
  },
  "extends": [
    "eslint:recommended",
    "plugin:@wordpress/eslint-plugin/recommended",
    "plugin:eslint-comments/recommended"
  ]
}